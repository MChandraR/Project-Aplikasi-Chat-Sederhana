<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:id="@+id/ParentView"
    android:gravity="start"
    android:orientation="vertical"
    android:paddingTop="0dp"
    android:paddingRight="10dp"
    android:paddingBottom="5dp"
    android:paddingLeft="10dp"
    android:layout_marginBottom="10dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/MessageModel0"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:background="@drawable/cardmodelview"
            android:orientation="vertical"
            android:gravity="start"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="16sp"
                android:textStyle="bold"
                android:id="@+id/Sender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sender"/>
            <TextView
                android:id="@+id/Message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Message"/>
            <TextView
                android:id="@+id/Time"
                android:text="waktu"
                android:textAlignment="textEnd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.3"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/MessageModel1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.3"/>
        <LinearLayout
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:background="@drawable/cardmodelview2"
            android:orientation="vertical"
            android:gravity="start"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:id="@+id/Me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sender"/>
            <TextView
                android:textColor="@color/white"
                android:id="@+id/Messages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Message"/>
            <TextView
                android:id="@+id/TimeMe"
                android:text="waktu"
                android:textAlignment="textEnd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/MessageModel2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.2"/>
        <TextView
            android:id="@+id/UserJoinedMessage"
            android:shadowColor="@color/dark_green"
            android:background="@drawable/cardmodelview3"
            android:textAlignment="center"
            android:textColor="@color/dark_green"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:text="User Joined"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.2"/>
    </LinearLayout>
</LinearLayout>